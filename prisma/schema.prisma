generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Email {
  id          String       @id @default(cuid())
  email       String       @unique
  name        String?
  country     String?
  phone       String?
  linkedin    String?
  github      String?
  status      Status       @default(READY)
  lastError   String?
  sentAt      DateTime?
  sentSubject String?
  sentBody    String?      @db.Text
  openedAt    DateTime?
  openCount   Int          @default(0)
  ipAddress   String?
  userAgent   String?
  geoLocation String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  events      EmailEvent[]
}

model EmailEvent {
  id          String   @id @default(cuid())
  emailId     String
  email       Email    @relation(fields: [emailId], references: [id], onDelete: Cascade)
  event       String
  status      Status
  ipAddress   String?
  userAgent   String?
  geoLocation String?
  errorReason String?
  rawData     String?  @db.Text
  timestamp   DateTime
  createdAt   DateTime @default(now())

  @@index([emailId])
}

model Template {
  id        String   @id @default(cuid())
  subject   String
  body      String   @db.Text
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Status {
  READY
  SENDING
  SENT
  DELIVERED
  OPENED
  BLOCKED
  DROPPED
  FAILED
}

